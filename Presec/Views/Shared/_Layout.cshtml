<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        body
        {
            padding-top: 60px;
            padding-bottom: 40px;
        }
        .sidebar-nav
        {
            padding: 9px 0;
        }
    </style>
    <link href="@Url.Content("~/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.17.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tmpl.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/datajs-1.0.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout-2.0.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout.mapping.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/proj.find.js")" type="text/javascript"></script>
    <script src="http://api-maps.yandex.ru/1.1/index.xml?key=AOpIPk8BAAAAVW-PBgIAY2B20rPw1PcOX0Gkn6Ah7e15L9QAAAAAAAAAAACXy_5ZdWMyS9NOY137nkvh99lqew==" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="#">Presec.org</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#about">About</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                    <p class="navbar-text pull-right">
                        Logged in as <a href="#">username</a></p>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="well sidebar-nav">
                    <ul class="nav nav-list">
                        <li class="nav-header">Поиск избирательного участка</li>
                        <li>
                            <form class="form-search" action="">
                            <input id="search_field" type="text" class="search-query span7" placeholder="улица, дом"
                                value="винокур" />
                            <a id="search_button" href="#" class="btn btn-small btn-primary" style="margin-top: 3px;">
                                <i class="icon-search icon-white"></i>Поиск</a>
                            </form>
                        </li>
                        <li>
                            <div class="row-fluent">
                                <a class="btn btn-small btn-info" href="#" data-bind="toggle : similarToggle, toggleOpts : {layout : 'similar_layout'}"><i class="icon-folder-close icon-white"></i>
                                    Похожие</a> 
                                <a class="btn btn-small btn-info" href="#" data-bind="toggle : nearToggle, toggleOpts : {layout : 'near_layout'}"><i class="icon-folder-close icon-white">
                                    </i>Рядом</a></div>
                        </li>
                        <li class="nav-header toggle_layout similar_layout">Похожие аддресса</li>
                        <li class="toggle_layout similar_layout">
                            <table class="table table-striped table-condensed" data-bind="template: {name: 'short-list-template', foreach: similars}">
                            </table>
                        </li>
                        <li class="nav-header toggle_layout near_layout">Участки рядом</li>
                        <li class="toggle_layout near_layout">
                            <table class="table table-striped table-condensed" data-bind="template: {name: 'short-list-template', foreach: near}">
                            </table>
                        </li>
                        <!-- ko with : first -->
                        <li class="nav-header">Ваш избирательный участок &nbsp;&nbsp;<span data-bind="text: id"
                            class="label label-success"></span></li>
                        <li data-bind="template: {name: 'addr-template', data: station}"></li>
                        <li class="nav-header">Ваш УИК</li>
                        <li data-bind="template: {name: 'addr-template', data: uik}"></li>
                        <li class="nav-header">Аддресса приписки участка</li>
                        <li>
                            <table class="table table-striped table-condensed" data-bind="template: {name: 'line-template', foreach: lines}">
                            </table>
                        </li>
                        <!-- /ko -->
                    </ul>
                </div>
                <!--/.well -->
                <script type="text/html" id="addr-template">
                <div class="row-fluid">
                    <table class="table table-striped table-condensed">
                    <tr><td>Аддресс</td><td data-bind="text: addr"></td></tr>
                    <tr><td>Телефон</td><td data-bind="text: phone"></td></tr>
                    <tr><td>Организация</td><td data-bind="text: org"></td></tr>
                    <tr data-bind="visible : aux"><td>Дополнительно</td><td data-bind="text: aux"></td></tr>
                    </table>
                </div>
                </script>
                <script type="text/html" id="line-template">
                    <tr><td data-bind="text : addr"></td></tr>
                </script>
                <script type="text/html" id="short-list-template">
                    <tr>
                        <td>
                            <span data-bind="text: id" class="label label-success"></span>
                        </td>
                        <td data-bind="text: lines">
                        </td>
                    </tr>
                </script>
            </div>
            <!--/span-->
            <div class="span9">
                <div class="hero-unit">
                    @RenderBody()
                </div>
            </div>
            <!--/span-->
        </div>
        <!--/row-->
        <hr>
        <footer>
            <p>
                © Company 2012</p>
        </footer>
    </div>
    <!--/.fluid-container-->
</body>
</html>
